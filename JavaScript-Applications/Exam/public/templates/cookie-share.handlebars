<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Share a cookie</strong>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="tb-cookieshare-text" class="col-sm-3 control-label">Text</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="tb-cookieshare-text" placeholder="Text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tb-cookieshare-category" class="col-sm-3 control-label">Category</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="tb-cookieshare-category" placeholder="Category">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tb-cookieshare-image" class="col-sm-3 control-label">Image</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="tb-cookieshare-image" placeholder="Image">
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button id="btn-share" class="btn btn-success btn-sm">Share</button>
                            <button id="btn-share-reset" class="btn btn-default btn-sm">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
